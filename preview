#!/usr/bin/env php
<?php
namespace Preview;

/*
 * check preview files are autoloaded
 */
$files = array(
    __DIR__ . '/vendor/autoload.php',
    __DIR__ . '/../../autoload.php'
);

$installed = false;

foreach ($files as $f) {
    if (file_exists($f)) {
        require_once $f;
        $installed = true;
        break;
    }
}

if (!$installed) {
    die("Preview is not correctly installed");
}

$command = new Command;
$command->run($argv);
